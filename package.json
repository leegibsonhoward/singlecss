{
  "name": "singlecss",
  "version": "1.0.0",
  "description": "",
  "main": "dist/main.min.css",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rimraf -g dist/**/*",
    "lint": "stylelint \"src/**/*.css\"",
    "postcss": "postcss src/input.css -o dist/singlecss.min.css",
    "watch": "npm run clean && npm run postcss -- --watch --no-map -u stylelint autoprefixer",
    "build": "npm run clean && npm run lint && npm run postcss -- --map -u autoprefixer cssnano"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cssnano": "^6.1.2",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "rimraf": "^5.0.5",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "browserslist": [
    "> 2%"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "cssnano": {
        "preset": "default"
      },
      "stylelint": {}
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {}
  }
}
